<section>
  <div class="detail-panel">
    <div class="detail-container">
      <div class="detail-left">
        <div class="detail-img">
          <img src="<%- data.api.book_image %>" alt="" />
        </div>
      </div>
      <div class="detail-right">
        <div class="detail-title">
          <h3><%- data.api.title %></h3>

          <div class="detail-author">
            <h6>Yazar:</h6>
            &nbsp;
            <h4><%- data.api.author %></h4>
          </div>
          <div class="detail-publisher">
            <h6>Yayınevi:</h6>

            <h5>&nbsp;&nbsp;<%- data.api.publisher %></h5>
          </div>
        </div>

        <div class="detail-rank">
          <h3>Değerlendirmeler</h3>
          <hr class="rank" />
          <div class="stars">
            <i class="bx bxs-star"></i><i class="bx bxs-star"></i
            ><i class="bx bxs-star"></i><i class="bx bxs-star-half"></i
            ><i class="bx bx-star"></i>
            <h2>(16)</h2>
          </div>
        </div>
        <div class="details">
          <div class="detail-desc">
            <h6>Açıklama:</h6>
            <h5>
              <%- data.api.description %>
            </h5>
          </div>
          <div class="detail-size">
            <h6>Kitap Boyutu:</h6>

            <h5>&nbsp;&nbsp;<%- data.api.book_image_width %> mm x <%- data.api.book_image_height %> mm</h5>
          </div>
        </div>
        <div class="basket">
          <button type="submit" class="basket-btn">Sepete Ekle</button>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="book-panel">
    <div class="title">
      <h3>Öneriler</h3>
      <hr />
    </div>
    <div class="book-col">
      <div class="customer-logos slider">
        <% for( let index = 0; index < 7; index++ ) { %>
       
            <div class="slide">
              <div class="item">
                <a href="/details/<%- data.val[index]._id %>">
                  <div class="book-img">
                    <img src="<%- data.val[index].book_image %>" />
                  </div>
                  <div class="book-info">
                    <h3><%- data.val[index].title %></h3>
                    <div class="book-author">
                      <h4><%- data.val[index].author %></h4>
                    </div>
                    <div class="book-publisher">
                      <h5><%- data.val[index].publisher %></h5>
                    </div>
                  </div>
                  <div class="det">
                    <div class="book-detail">
                      <h6>İncele</h6>
                      <i class="bx bx-chevron-up"></i>
                    </div>
                  </div>
                </a>
                
              </div>
            </div>
 

        <% } %>
      </div>
    </div>
  </div>
</section>

