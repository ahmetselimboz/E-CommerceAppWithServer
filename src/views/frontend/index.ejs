
<div class="alertyy">
  <% if (locals.validation_error !=undefined || locals.success_message!=undefined || locals.login_error !=undefined) { %> <%-
  include('./partials/_message') %> <% } %>
</div>
<section style="height: inherit;">
  <div class="bg">
    <div class="header-panel">
    
      <div class="header-title">
        <h1>Kitap Dağı</h1>
        <div class="header-alt-title">
          <h4>Dağ kadar kitabın tek adresi..</h4>
        </div>
      </div>
    </div>
  </div>
 
</section>

<section class="box-center">
  <div class="box-panel">
    <div class="box-left">
      <a class="box-a1" href="#">
        <img id="img1" src="/frontend/assets/gunun_kitabi.png" alt="" />
      </a>
    </div>
    <div class="box-right">
      <div class="box-right-top">
        <a class="box-a2" href="/page/indirimdekiler/1">
          <img id="img2" src="/frontend/assets/01.png" alt="" />
        </a>
      </div>
      <div class="box-right-bottom">
        <a class="box-a3" href="/page/yeni-cikan-kitaplar/1">
