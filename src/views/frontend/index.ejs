        </a>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="book-panel">
    <div class="title">
      <h3>Sizin İçin Seçtiklerimiz</h3>
      <hr />
    </div>
    <div class="book-col">
      <div class="customer-logos slider">
        <% for( let index = 0; index < 7; index++ ) { %>
       
            <div class="slide">
              <div class="item">
                <a href="/details/<%- api[index]._id %>">
                  <div class="book-img">
                    <img src="<%- api[index].book_image %>" />
                  </div>
                  <div class="book-info">
                    <h3><%- api[index].title %></h3>
                    <div class="book-author">
                      <h4><%- api[index].author %></h4>
                    </div>
                    <div class="book-publisher">
                      <h5><%- api[index].publisher %></h5>
                    </div>
                  </div>
                  <div class="det">
                    <div class="book-detail">
                      <h6>İncele</h6>
                      <i class="bx bx-chevron-up"></i>
                    </div>
                  </div>
                </a>
                
              </div>
            </div>
 

        <% } %>
      </div>
    </div>
  </div>
</section>
