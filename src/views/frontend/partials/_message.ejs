<% validation_error.forEach(element => { %>

<div id="screen">
  <div class="notification">
    <div class="identifier"><i class="bx bx-x"></i></div>
    <div class="text">
      <p><%- element.msg %></p>
    </div>
  </div>
  <div class="number"><i class="bx bx-x"></i></div>
</div>


<% }) %> <% success_message.forEach(element => { %>

<div id="screen">
  <div class="notification" id="notify-success">
    <div class="identifier"><i id="iden-icon-success" class="bx bx-check"></i></div>
    <div class="text" id="text-success">
      <p id="text-p-success"><%- element.msg %></p>
    </div>
  </div>
  <div class="number"><i id="icon-success" class="bx bx-check"></i></div>
</div>



<% }) %> <% login_error.forEach(element => { %>

<div id="screen">
  <div class="notification" >
    <div class="identifier"><i  class="bx bx-x"></i></div>
    <div class="text" >
      <p ><%- element%></p>
    </div>
  </div>
  <div class="number"><i  class="bx bx-x"></i></div>
</div>
<% }) %>
